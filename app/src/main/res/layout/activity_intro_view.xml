<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".IntroActivityView">
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/logo"
        android:id="@+id/image_logo"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/agt_title"
        android:layout_below="@+id/image_logo"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGT blah blah"
        android:layout_marginLeft="50sp"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/agt_description"
        android:layout_below="@+id/agt_title"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blarg Blarg blarg"
        android:layout_marginLeft="50sp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/progressBar"
        android:layout_below="@+id/agt_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_login"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />

    <Button
        android:textColor="#000000"
        android:id="@+id/btn_login"
        android:layout_marginBottom="2dp"
        android:ems="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:drawableLeft="@drawable/ic_login"
        android:layout_above="@+id/btn_register"
        android:layout_centerHorizontal="true"/>
    <Button
        android:drawableLeft="@drawable/ic_register"
        android:textColor="#000000"
        android:ems="20"
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        />

</RelativeLayout>