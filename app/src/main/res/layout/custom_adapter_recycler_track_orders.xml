<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    app:cardBackgroundColor="?attr/colorPrimary"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_id_template"
                android:text="Order Id: "/>
            <TextView
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:id="@+id/txt_order_id"
                android:layout_toRightOf="@+id/txt_id_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id here"/>
            <androidx.cardview.widget.CardView
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="5dp">
                <TextView
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status here"
                    android:textSize="30sp"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:id="@+id/image_product"/>
            <TableLayout
                android:layout_marginTop="20sp"
                android:id="@+id/table_layout"
                android:layout_toRightOf="@+id/image_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Product name: "/>
                    <TextView
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="name here"
                        android:id="@+id/txt_product_name"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Date Ordered: "/>
                    <TextView
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Date here"
                        android:id="@+id/txt_date_ordered"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Number of orders: "/>
                    <TextView
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Order num here"
                        android:id="@+id/txt_number_of_orders"/>
                </TableRow>

            </TableLayout>
            <RelativeLayout
                android:layout_toRightOf="@+id/image_product"
                android:layout_below="@+id/table_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:text="Price: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P1000"
                    android:id="@+id/txt_product_price"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_toRightOf="@+id/price"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>